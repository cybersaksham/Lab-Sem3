   "source": [
    "def checkPalindrome(s):\n",
    "    n = len(s)\n",
    "    if n <= 1:\n",
    "        return True\n",
    "    elif n == 2:\n",
    "        return s[0] == s[1]\n",
    "    return (s[0] == s[-1]) and checkPalindrome(s[1:n - 1])"
   ]
  },
